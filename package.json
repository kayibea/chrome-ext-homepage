{
  "name": "sweet-home",
  "description": "Custom homepage for new tabs, replacing the default Chrome new tab page.",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "watch": "nodemon",
    "build": "tsc && vite build",
    "preview": "vite preview"
  },
  "prettier": {
    "printWidth": 120,
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "all",
    "bracketSpacing": true,
    "arrowParens": "always",
    "endOfLine": "lf"
  },
  "devDependencies": {
    "@types/node": "^24.3.0",
    "nodemon": "^3.1.10",
    "typescript": "~5.8.3",
    "vite": "^7.1.2"
  }
}
